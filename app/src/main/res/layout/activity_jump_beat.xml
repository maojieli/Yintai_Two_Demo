<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiyun.asus.yintai_two_demo.Fragments.Beat.Jump.JumpBeatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_jump_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/all_back"
            />

        <TextView
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/tv_jump_top_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            />

        <ImageView
            android:id="@+id/iv_top_right_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/productlist_choose_button"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_productlist_time"
                />

            <TextView
                android:id="@+id/tv_time_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒计时:"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/v1_img_productlist_brand"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌故事"
                />
        </LinearLayout>
    </RelativeLayout>
    <!--三按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:background="@color/bg_color"
        android:gravity="center_vertical">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_sale_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bu_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="销量"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_price_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView

                android:id="@+id/bu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="价格"
                android:textColor="#666"/>

            <ImageView
                android:id="@+id/iv_price_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bu_price"
                android:src="@mipmap/product_blackbar1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_reduction_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView

                android:id="@+id/bu_reduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="折扣"
                android:textColor="#666"/>

            <ImageView
                android:id="@+id/iv_reduction_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bu_reduction"
                android:src="@mipmap/product_blackbar2"
                />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/cvp_jump_beat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
