<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.jiyun.asus.yintai_two_demo.Fragments.homepage.XiangQingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/tv_xiangqing_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        app:srcCompat="@mipmap/u34" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="商品详情"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_fenxiang_xiangqing"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/share_biao" />
</RelativeLayout>
    <ImageView
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <com.recker.flybanner.FlyBanner
        android:id="@+id/fb_xiangqing"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.recker.flybanner.FlyBanner>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:background="#ddd"
                    android:layout_weight="0.01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_gravity="center"
                    android:src="@drawable/favority_normal_productdetail"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_weight="2"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
                  <TextView
                      android:layout_gravity="center"
                      android:layout_marginLeft="10dp"
                      android:textSize="20dp"
                      android:textColor="#ff0000"
                      android:text="￥"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:layout_gravity="center"
                      android:textSize="20dp"
                      android:textColor="#ff0000"
                      android:text="价格"
                      android:id="@+id/tv_price_xiangqing"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:layout_gravity="center"
                      android:layout_marginLeft="20dp"
                      android:textSize="15dp"
                      android:textColor="#888"
                      android:text="￥"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:layout_gravity="center"
                      android:textSize="15dp"
                      android:textColor="#888"
                      android:text="价格"
                      android:id="@+id/tv_yuanprice_xiangqing"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
              </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:text="商品编号:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:text="21-464-9691"
                        android:id="@+id/tv_bianhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
