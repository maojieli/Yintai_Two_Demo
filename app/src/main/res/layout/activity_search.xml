<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiyun.asus.yintai_two_demo.Fragments.homepage.searchforgoods.SearchActivity">
<android.support.v7.widget.Toolbar
    android:id="@+id/tb_too_sear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入商品名称、品牌或编号"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="取消"
        android:layout_alignBaseline="@+id/et_search"
        android:layout_alignBottom="@+id/et_search"
        android:layout_toRightOf="@+id/et_search"
        android:layout_toEndOf="@+id/et_search"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />
<android.support.design.widget.TabLayout
    android:layout_below="@id/tb_too_sear"
    android:id="@+id/tab_lay_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/tab_lay_search"
        android:id="@+id/vp_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</RelativeLayout>
