<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/catogory_group_left_bg"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/relativeLayout"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索历史"

        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:src="@mipmap/catogory_group_right_bg"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"

        android:textSize="20dp"
        android:text="●ω● "
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="您还没有搜索记录"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />
    <ImageView
        android:src="@mipmap/catogory_group_left_bg"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />
    <ImageView
        android:src="@mipmap/catogory_group_right_bg"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/imageView6"
        android:text="热门品牌" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="保温杯"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_one"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:text="名品衬衫" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保湿面膜"
        android:layout_alignBaseline="@+id/bt_two"
        android:layout_alignBottom="@+id/bt_two"
        android:layout_toRightOf="@+id/bt_two"
        android:layout_toEndOf="@+id/bt_two"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Button"
        android:layout_below="@+id/bt_one"
        android:layout_alignLeft="@+id/bt_one"
        android:layout_alignStart="@+id/bt_one" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_two"
        android:layout_alignStart="@+id/bt_two"
        android:layout_alignTop="@+id/bt_four"
        android:text="Button" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_five"
        android:layout_alignBottom="@+id/bt_five"
        android:layout_alignLeft="@+id/bt_three"
        android:layout_alignStart="@+id/bt_three"
        android:text="Button" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_four"
        android:layout_alignStart="@+id/bt_four"
        android:layout_below="@+id/bt_four"
        android:layout_marginTop="17dp"
        android:text="Button" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_five"
        android:layout_alignStart="@+id/bt_five"
        android:layout_alignTop="@+id/bt_seven"
        android:text="Button" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_six"
        android:layout_alignStart="@+id/bt_six"
        android:layout_alignTop="@+id/bt_eight"
        android:text="Button" />

    <Button
        android:background="@drawable/bt_btn"
        android:id="@+id/bt_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_seven"
        android:layout_alignRight="@+id/bt_seven"
        android:layout_below="@+id/bt_seven"
        android:layout_marginTop="14dp"
        android:text="Button" />


</RelativeLayout>